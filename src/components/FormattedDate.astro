---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const localDate = new Date(date.getTime() + date.getTimezoneOffset() * 60000);
---

<time datetime={localDate.toISOString()}>
  {
    localDate.toLocaleDateString("en-US", {
      month: "long",
      day: "2-digit",
      year: "numeric",
    })
  }
</time>