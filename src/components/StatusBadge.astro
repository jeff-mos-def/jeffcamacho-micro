---
export type Status = 'To Do' | 'Doing' | 'Done' | 'OBE' | 'Backlog';

interface Props {
  status: Status;
}

const { status } = Astro.props;

const getStatusColor = (status: Status): string => {
  switch (status) {
    case 'To Do':
      return 'bg-yellow-100 text-gray-800 dark:bg-yellow-900 dark:text-gray-200';
    case 'Doing':
      return 'bg-blue-100 text-gray-800 dark:bg-blue-900 dark:text-gray-200';
    case 'Done':
      return 'bg-green-100 text-gray-800 dark:bg-green-900 dark:text-gray-200';
    case 'OBE':
      return 'bg-purple-100 text-gray-800 dark:bg-purple-900 dark:text-gray-200';
    case 'Backlog':
      return 'bg-yellow-400 text-gray-800 dark:bg-yellow-600 dark:text-gray-200'; // Updated to have yellow background
    default:
      return 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-300';
  }
};

const statusColorClass = getStatusColor(status);
---

<span class={`inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium ${statusColorClass}`}>
  {status}
</span>
